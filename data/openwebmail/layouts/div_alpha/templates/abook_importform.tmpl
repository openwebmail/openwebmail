      }
     }
     } else {
     for(i=0; i<document.forms['importForm'].elements.length; i++) {
      var e = document.forms['importForm'].elements[i];
      if (e.name == 'importcharset') {
         e.disabled = 1;
      }
     }
     }
  }
  //-->
  </script>

