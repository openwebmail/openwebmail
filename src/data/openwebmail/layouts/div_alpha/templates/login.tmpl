<tmpl_var header_template escape="none">

<div id="wrapper">
  <div id="loginlogo">
    <a href="<tmpl_var logo_link escape="html">"><img border="0" src="<tmpl_var url_logo escape="html">"></a>
  </div>

  <form action="<tmpl_var url_cgi escape="none">/openwebmail.pl" method="post" name="loginform" id="loginform">
  <input type="hidden" name="browserjavascript" value="none">
  <tmpl_loop redirectloop>
  <!-- support possible redirect after login -->
  <input type="hidden" name="<tmpl_var name>" value="<tmpl_var value escape="html">">
  <!-- end redirect support -->
  </tmpl_loop>

  <tmpl_unless enable_domainselect>
  <input type="hidden" name="logindomain" value="<tmpl_var logindomain escape="html">">
  </tmpl_unless>

  <div id="loginbox">
    <div id="loginboxtitle">gettext('Login')</div>

    <div class="loginfield">
      <!-- <label for="loginname">gettext('UserID:')</label> -->
      <input class="text" type="text" name="loginname" size="<tmpl_var loginfieldwidth escape="html">" value="gettext('User Name')" onFocus="hideloginname();" onBlur="showloginname();">
    </div>

    <div class="loginfield">
      <!-- <label for="password">gettext('Password:')</label> -->
      <input class="password_text" type="text" name="password_text" size="<tmpl_var loginfieldwidth escape="html">" value="gettext('Password')" onFocus="showpassword();">

      <input class="password<tmpl_if login_virtual_keyboard> keyboardInput" lang="<tmpl_var keyboard_language escape="html"></tmpl_if>" type="password" name="password" size="<tmpl_var loginfieldwidth escape="html">" value="" onBlur="hidepassword();">
    </div>

    <tmpl_if enable_domainselect>
    <!-- support domain selection -->
    <div class="loginfield">
      <!-- <label for="logindomain">gettext('Domain:')</label> -->

      <div class="dropdown">
      <select name="logindomain">
        <tmpl_loop domainselectloop>
        <option value="<tmpl_var option escape="html">" <tmpl_if selected>selected</tmpl_if>><tmpl_var label escape="html"></option>
        </tmpl_loop>
      </select>
      </div>
    </div>
    <!-- end support domainselect -->
    </tmpl_if>

    <div id="loginoptions">
      <input class="checkbox" type="checkbox" id="httpcompress" name="httpcompress" value="1" <tmpl_if enable_httpcompression><tmpl_if use_httpcompression>checked="checked"</tmpl_if> onclick="httpcompresshelp();"<tmpl_else>disabled="1"</tmpl_if>>
      <label for="httpcompress">gettext('HTTP Compression')</label>

      <tmpl_if enable_autologin>
      <!-- support autologin if it is allowed for this ip -->
      <input class="checkbox" type="checkbox" id="autologin" name="autologin" value="1" <tmpl_if use_autologin>checked="checked"</tmpl_if> onclick="autologinhelp();">
      <label for="autologin">gettext('Auto Login')</label>
      <!-- end support autologin -->
      </tmpl_if>
    </div>

    <div id="loginsubmit">
      <input class="submit" type="submit" name="loginbutton" value="gettext('Login')">
    </div>
  </div>

  </form>

<script type="text/javascript">
<!--
// detect level of javascript support from users browser
// to determine if html composing will be allowed
document.loginform.browserjavascript.value = (document.getElementById) ? 'dom' :
                                                        (document.all) ? 'ie'  :
                                                     (document.layers) ? 'nn4' :
                                                                         'none';


// show the word password in the password field via the password_text field
document.loginform.password_text.style.display = 'inline';
document.loginform.password_text.style.color = '#666';
document.loginform.password.style.display = 'none';
document.loginform.loginname.style.color = '#666';

function showloginname() {
   if (document.loginform.loginname.value == '') {
      document.loginform.loginname.value = 'jgettext('User Name')';
      document.loginform.loginname.style.color = '#666';
   }
}

function hideloginname() {
   if (document.loginform.loginname.value == 'jgettext('User Name')') {
      document.loginform.loginname.value = '';
      document.loginform.loginname.style.color = '#000';
      document.loginform.loginname.focus();
   }
}

function showpassword() {
   // hide the password_text field and show the password field
   document.loginform.password_text.style.display = 'none';
   document.loginform.password.style.display = 'inline';
   document.loginform.password.style.color = '#000';
   document.loginform.password.focus();
}

function hidepassword() {
   // hide the password field and show the password_text field if needed
   if (document.loginform.password.value == '') {
      document.loginform.password.style.display = 'none';
      document.loginform.password_text.style.display = 'inline';
      document.loginform.password_text.style.color = '#666';
   }
}

function httpcompresshelp() {
   if (document.loginform.httpcompress.checked) {
      var msg = 'jgettext('HTTP compression can reduce the use of network bandwidth between your computer and the webmail server, but there are some compatibility issues:\n\n1. some proxy servers only support HTTP compression via HTTP 1.1. You may need to manually enable HTTP 1.1 support in the proxy settings of your browser\n\n2. some proxy servers do not support HTTP compression at all. You may have to list the webmail server as directly connected in the proxy configuration of your browser.\n\n3. some browsers have problems when using HTTP compression with SSL.\n\n4. some browsers claim to support HTTP compression but actually do not.\n\nIf you encounter problems please login again with this option unchecked.\n')';
      alert(msg);
   }

   return true;
}

function autologinhelp() {
   if (document.loginform.autologin.checked) {
      var msg = 'jgettext('When this feature is enabled you may login to <tmpl_var programname escape="js"> without re-entering your username and password, but only if you did not logout of your previous session and that session has not timed out.\n\nDO NOT ENABLE THIS FEATURE ON A PUBLIC COMPUTER or others will gain access to your account.\n')';
      alert(msg);
   }

   return true;
}

//-->
</script>

<tmpl_var footer_template escape="none">
